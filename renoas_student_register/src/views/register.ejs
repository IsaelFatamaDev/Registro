<!DOCTYPE html>
<html lang="es">
     <head>
          <meta charset="UTF-8">
          <meta name="viewport" content="width=device-width, initial-scale=1.0">
          <title>Registro de Estudiantes - RENOAS</title>
          <script src="https://cdn.tailwindcss.com"></script>
          <link rel="stylesheet"
               href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
          <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
     </head>
     <body class="bg-gray-100 h-screen">
          <!-- Navbar -->
          <nav
               class="bg-gradient-to-r from-blue-500 to-blue-700 p-4 text-white flex justify-between items-center shadow-lg">
               <div class="text-2xl font-bold flex items-center">
                    <i class="fas fa-graduation-cap mr-2"></i> RENOAS
               </div>
               <div class="text-sm">Sistema de Registro de Estudiantes</div>
          </nav>

          <div class="flex h-full">
               <!-- Sidebar -->
               <aside
                    class="bg-gradient-to-t from-blue-700 to-blue-900 text-white w-64 p-6 shadow-md">
                    <ul class="space-y-4">
                         <li><a href="/"
                                   class="flex items-center space-x-2 hover:bg-blue-800 p-3 rounded"><i
                                        class="fas fa-home"></i><span>Inicio</span></a></li>
                         <li><a href="/students"
                                   class="flex items-center space-x-2 hover:bg-blue-800 p-3 rounded"><i
                                        class="fas fa-users"></i><span>Listado
                                        de Estudiantes</span></a></li>
                         <li><a href="/students/register"
                                   class="flex items-center space-x-2 hover:bg-blue-800 p-3 rounded"><i
                                        class="fas fa-cogs"></i><span>Registrar
                                        Estudiante</span></a></li>
                    </ul>
               </aside>

               <main class="flex-1 p-6 bg-gray-50">
                    <section
                         class="max-w-4xl mx-auto p-8 bg-gradient-to-r from-blue-50 to-white rounded-xl shadow-lg">
                         <h2
                              class="text-2xl font-bold text-center text-blue-700 mb-6">Registro
                              de Estudiantes</h2>
                         <form id="studentForm" class="space-y-6">
                              <div
                                   class="grid grid-cols-1 gap-6 md:grid-cols-2">
                                   <!-- Nombre -->
                                   <div>
                                        <label
                                             class="block text-gray-700 font-medium mb-2"
                                             for="name">Nombre</label>
                                        <input id="name" name="name" type="text"
                                             required
                                             class="block w-full px-4 py-2 text-gray-700 bg-gray-100 border rounded-md focus:ring-2 focus:ring-blue-300 focus:outline-none">
                                        <p id="nameError"
                                             class="text-red-500 text-sm mt-1 hidden">Solo
                                             se permiten letras y espacios.</p>
                                   </div>
                                   <!-- Apellidos -->
                                   <div>
                                        <label
                                             class="block text-gray-700 font-medium mb-2"
                                             for="lastName">Apellidos</label>
                                        <input id="lastName" name="lastName"
                                             type="text" required
                                             class="block w-full px-4 py-2 text-gray-700 bg-gray-100 border rounded-md focus:ring-2 focus:ring-blue-300 focus:outline-none">
                                        <p id="lastNameError"
                                             class="text-red-500 text-sm mt-1 hidden">Solo
                                             se permiten letras y espacios.</p>
                                   </div>
                                   <!-- Tipo de Documento -->
                                   <div>
                                        <label
                                             class="block text-gray-700 font-medium mb-2"
                                             for="documentType">Tipo de
                                             Documento</label>
                                        <select id="documentType"
                                             name="documentType" required
                                             class="block w-full px-4 py-2 text-gray-700 bg-gray-100 border rounded-md focus:ring-2 focus:ring-blue-300 focus:outline-none">
                                             <option value>Seleccione</option>
                                             <option value="DNI">DNI</option>
                                             <option value="CNE">CNE</option>
                                        </select>
                                   </div>
                                   <!-- Número de Documento -->
                                   <div>
                                        <label
                                             class="block text-gray-700 font-medium mb-2"
                                             for="documentNumber">Número de
                                             Documento</label>
                                        <input id="documentNumber"
                                             name="documentNumber" type="text"
                                             required
                                             class="block w-full px-4 py-2 text-gray-700 bg-gray-100 border rounded-md focus:ring-2 focus:ring-blue-300 focus:outline-none">
                                        <p id="documentNumberError"
                                             class="text-red-500 text-sm mt-1 hidden">Debe
                                             ser un número de 8 dígitos.</p>
                                   </div>
                                   <!-- Género -->
                                   <div>
                                        <label
                                             class="block text-gray-700 font-medium mb-2"
                                             for="gender">Género</label>
                                        <select id="gender" name="gender"
                                             required
                                             class="block w-full px-4 py-2 text-gray-700 bg-gray-100 border rounded-md focus:ring-2 focus:ring-blue-300 focus:outline-none">
                                             <option value>Seleccione</option>
                                             <option
                                                  value="M">Masculino</option>
                                             <option value="F">Femenino</option>
                                        </select>
                                   </div>
                                   <!-- Fecha de Nacimiento -->
                                   <div>
                                        <label
                                             class="block text-gray-700 font-medium mb-2"
                                             for="birthDate">Fecha de
                                             Nacimiento</label>
                                        <input id="birthDate" name="birthDate"
                                             type="date" required
                                             class="block w-full px-4 py-2 text-gray-700 bg-gray-100 border rounded-md focus:ring-2 focus:ring-blue-300 focus:outline-none">
                                        <p id="birthDateError"
                                             class="text-red-500 text-sm mt-1 hidden">Debe
                                             ser mayor de 18 años.</p>
                                   </div>
                                   <!-- Teléfono -->
                                   <div>
                                        <label
                                             class="block text-gray-700 font-medium mb-2"
                                             for="phone">Teléfono</label>
                                        <input id="phone" name="phone"
                                             type="text" required
                                             class="block w-full px-4 py-2 text-gray-700 bg-gray-100 border rounded-md focus:ring-2 focus:ring-blue-300 focus:outline-none">
                                        <p id="phoneError"
                                             class="text-red-500 text-sm mt-1 hidden">Debe
                                             ser un número de 9 dígitos.</p>
                                   </div>
                                   <!-- Turno -->
                                   <div>
                                        <label
                                             class="block text-gray-700 font-medium mb-2"
                                             for="turn">Turno</label>
                                        <select id="turn" name="turn" required
                                             class="block w-full px-4 py-2 text-gray-700 bg-gray-100 border rounded-md focus:ring-2 focus:ring-blue-300 focus:outline-none">
                                             <option value>Seleccione</option>
                                             <option value="M">Mañana</option>
                                             <option value="T">Tarde</option>
                                        </select>
                                   </div>
                                   <!-- Grado -->
                                   <div>
                                        <label
                                             class="block text-gray-700 font-medium mb-2"
                                             for="grade">Grado</label>
                                        <select id="grade" name="grade" required
                                             class="block w-full px-4 py-2 text-gray-700 bg-gray-100 border rounded-md focus:ring-2 focus:ring-blue-300 focus:outline-none">
                                             <option value>Seleccione</option>
                                             <option value="1">1</option>
                                             <option value="2">2</option>
                                             <option value="3">3</option>
                                             <option value="4">4</option>
                                             <option value="5">5</option>
                                             <option value="6">6</option>
                                        </select>
                                   </div>
                                   <!-- Sección -->
                                   <div>
                                        <label
                                             class="block text-gray-700 font-medium mb-2"
                                             for="section">Sección</label>
                                        <select id="section" name="section"
                                             required
                                             class="block w-full px-4 py-2 text-gray-700 bg-gray-100 border rounded-md focus:ring-2 focus:ring-blue-300 focus:outline-none">
                                             <option value>Seleccione</option>
                                             <option value="A">A</option>
                                             <option value="B">B</option>
                                             <option value="C">C</option>
                                             <option value="D">D</option>
                                        </select>
                                   </div>
                              </div>
                              <button type="submit"
                                   class="px-6 py-2 font-bold text-white bg-gradient-to-r from-blue-500 to-blue-700 rounded-md shadow-md hover:from-blue-600 hover:to-blue-800 focus:outline-none">
                                   Registrar
                              </button>
                         </form>
                    </section>
               </main>
          </div>
          <script>
        const form = document.getElementById('studentForm');

        form.addEventListener('input', validateRealTime);

        function validateRealTime(event) {
            const field = event.target;
            const errorElement = document.getElementById(`${field.id}Error`);

            let isValid = true;

            if (field.id === 'name' || field.id === 'lastName') {
                isValid = /^[A-Za-zÁÉÍÓÚáéíóúÑñ ]+$/.test(field.value);
            } else if (field.id === 'documentNumber') {
                isValid = /^[0-9]{8}$/.test(field.value);
            } else if (field.id === 'phone') {
                isValid = /^[0-9]{9}$/.test(field.value);
            }

            toggleError(errorElement, isValid);
        }

        function toggleError(errorElement, isValid) {
            if (isValid) {
                errorElement.classList.add('hidden');
            } else {
                errorElement.classList.remove('hidden');
            }
        }

        form.addEventListener('submit', async (event) => {
            event.preventDefault();

            const formData = new FormData(form);
            const data = Object.fromEntries(formData);

            const birthDate = new Date(data.birthDate);
            const today = new Date();
            const age = today.getFullYear() - birthDate.getFullYear();

            if (age < 18) {
                Swal.fire({
                    icon: 'error',
                    title: 'Edad no válida',
                    text: 'El estudiante debe ser mayor de 18 años.',
                });
                return;
            }

            data.birthDate = birthDate.toLocaleDateString('es-PE');

            try {
    const response = await fetch('http://3.147.198.203:8080/api/students/create', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
    });

    if (!response.ok) {
        throw new Error('Error en el registro del estudiante');
    }

    Swal.fire({
        icon: 'success',
        title: 'Registro exitoso',
        text: 'Estudiante registrado correctamente.',
        confirmButtonText: 'Ir a Listado',
    }).then(() => {
        window.location.href = '/students'; // Redirige a /students
    });

    form.reset();
} catch (error) {
    Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'Hubo un problema al registrar el estudiante.',
    });
}

        });
    </script>
     </body>
</html>
